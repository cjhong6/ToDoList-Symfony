{% extends 'base.html.twig' %}

{% block body %}
    <h2 class = "page-header">To Do List</h2>
    <table class="table table-striped">

        <thead>
            <tr>
                <th>#</th>
                <th>To Do Item</th>
                <th>Due Date</th>
            </tr>
        </thead>

        <tbody>
            {% for toDoItem in todoItems %}
            <tr>
                <th scope="row">{{ toDoItem.id }}</th>
                <td>{{ toDoItem.name }}</td>
                <td>{{ toDoItem.dueDate | date('n/j/Y, g:i a')}}</td>
                <td> <a href = "{{ path('todo_detail',{'id': toDoItem.id}) }}" class = "btn btn-success">View</a></td>
                <td> <a href = "{{ path('todo_edit', {'id': toDoItem.id}) }}" class = "btn btn-default">Edit</a></td>
                <td> <a href = "{{ path('todo_delete', {'id': toDoItem.id}) }}" class = "btn btn-danger">Delete</a></td>
            </tr>
            {% endfor %}
        </tbody>

    </table>

{% endblock %}
